SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=
SMTP_PASS=
EMAIL_FROM=noreply@arda.cards

# ─── Application ──────────────────────────────────────────
NODE_ENV=development
APP_URL=http://localhost:5173
SERVICE_HOST=localhost
API_GATEWAY_PORT=3000
AUTH_SERVICE_PORT=3001
CATALOG_SERVICE_PORT=3002
KANBAN_SERVICE_PORT=3003
ORDERS_SERVICE_PORT=3004
NOTIFICATIONS_SERVICE_PORT=3005

