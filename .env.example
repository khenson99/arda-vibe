# ─── Database ───────────────────────────────────────────────
DATABASE_URL=postgresql://arda:arda_dev_password@localhost:5432/arda_v2

# ─── Redis ──────────────────────────────────────────────────
REDIS_URL=redis://localhost:6379

# ─── Elasticsearch ──────────────────────────────────────────
ELASTICSEARCH_URL=http://localhost:9200

# ─── Auth (JWT) ────────────────────────────────────────────
JWT_SECRET=change-me-in-production-use-a-64-char-random-string
