ORDERS_QUEUE_RISK_LOOKBACK_DAYS=30
ORDERS_QUEUE_RISK_MIN_LEVEL=medium
ORDERS_QUEUE_RISK_SCAN_LIMIT=100

# ─── AWS S3 ───────────────────────────────────────────────
AWS_REGION=us-east-1
